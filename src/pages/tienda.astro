---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Tienda - Cursus Fitness" description="Descubre nuestros productos y servicios de fitness">
  <section class="page-content">
    <div class="container">
      <h1>Tienda</h1>
      <p>Contenido de la página Tienda...</p>
    </div>
  </section>
</Layout>

<style>
  .page-content {
    padding: 120px 20px 60px;
    min-height: 100vh;
    background: linear-gradient(135deg, #0a0a0a 0%, #1a1a1a 100%);
  }
  
  .container {
    max-width: 1200px;
    margin: 0 auto;
  }
  
  h1 {
    font-size: 3rem;
    color: #99FF00;
    margin-bottom: 2rem;
    text-align: center;
  }
  
  p {
    font-size: 1.2rem;
    color: #e0e0e0;
    line-height: 1.8;
    text-align: center;
  }

  /* =================================================================
     RESPONSIVE DESIGN - PÁGINAS
     ================================================================= */

  /* Tablet Landscape (1024px y menos) */
  @media (max-width: 1024px) {
    .page-content {
      padding: 100px 20px 50px;
    }
    
    h1 {
      font-size: 2.5rem;
    }
    
    p {
      font-size: 1.1rem;
    }
  }

  /* Tablet Portrait (768px y menos) */
  @media (max-width: 768px) {
    .page-content {
      padding: 80px 15px 40px;
    }
    
    h1 {
      font-size: 2.2rem;
      margin-bottom: 1.5rem;
    }
    
    p {
      font-size: 1rem;
      line-height: 1.7;
    }
  }

  /* Mobile Large (480px y menos) */
  @media (max-width: 480px) {
    .page-content {
      padding: 70px 10px 30px;
    }
    
    h1 {
      font-size: 1.8rem;
      margin-bottom: 1rem;
    }
    
    p {
      font-size: 0.9rem;
      line-height: 1.6;
    }
  }

  /* Mobile Small (360px y menos) */
  @media (max-width: 360px) {
    .page-content {
      padding: 60px 8px 25px;
    }
    
    h1 {
      font-size: 1.6rem;
    }
    
    p {
      font-size: 0.85rem;
    }
  }
</style>

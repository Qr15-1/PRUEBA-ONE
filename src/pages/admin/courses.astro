<script>
    // Variables globales
    let courses = [];
    let editingCourseId = null;

    // Funci√≥n de logout
    function logout() {
        if (confirm('¬øEst√°s seguro de que quieres cerrar sesi√≥n?')) {
            fetch('/api/auth/logout', {
                method: 'POST',
                credentials: 'include'
            })
            .then(() => {
                window.location.href = '/admin/login';
            })
            .catch(error => {
                console.error('Error al cerrar sesi√≥n:', error);
                window.location.href = '/admin/login';
            });
        }
    }

    // Verificar sesi√≥n de admin
    async function checkAdminSession() {
        try {
            const response = await fetch('/api/admin/verify', {
                credentials: 'include'
            });
            
            if (!response.ok) {
                window.location.href = '/admin/login';
                return;
            }
        } catch (error) {
            console.error('Error:', error);
            window.location.href = '/admin/login';
        }
    }

    // Cargar cursos
    async function loadCourses() {
        try {
            const response = await fetch('/api/admin/courses', {
                credentials: 'include'
            });
            
            if (!response.ok) {
                throw new Error('Error al cargar cursos');
            }
            
            courses = await response.json();
            displayCourses();
        } catch (error) {
            console.error('Error:', error);
            showError('Error al cargar los cursos');
        }
    }

    // Mostrar cursos
    function displayCourses() {
        const container = document.getElementById('coursesContainer');
        const loading = document.getElementById('loading');
        const error = document.getElementById('error');

        if (loading) loading.style.display = 'none';
        if (error) error.style.display = 'none';
        if (container) {
            container.style.display = 'grid';
            container.innerHTML = courses.map(course => `
                <div class="course-card" style="background: #1C1C1E; border-radius: 15px; overflow: hidden; border: 1px solid #38383A; display: flex; flex-direction: column; box-shadow: 0 3px 15px rgba(0, 0, 0, 0.1); margin: 0; padding: 0; width: 100%; height: auto; position: relative;">

    // Abrir modal
    function openModal() {
        const modal = document.getElementById('courseModal');
        if (modal) {
            modal.style.display = 'block';
            document.body.style.overflow = 'hidden';
        }
    }

    // Cerrar modal
    function closeModal() {
        console.log('closeModal() called'); // Debug log
        const modal = document.getElementById('courseModal');
        if (modal) {
            modal.style.display = 'none';
            document.body.style.overflow = 'auto';
            console.log('Modal closed'); // Debug log
        } else {
            console.error('Modal not found'); // Debug log
        }
        
        // Limpiar formulario
        const form = document.getElementById('courseForm');
        if (form) {
            form.reset();
        }
        
        editingCourseId = null;
        const modalTitle = document.getElementById('modalTitle');
        if (modalTitle) {
            modalTitle.textContent = 'Nuevo Curso';
        }
    }

    // Editar curso
    function editCourse(courseId) {
        console.log('Editando curso:', courseId);
        const course = courses.find(c => c.id == courseId);
        if (!course) {
            console.error('Curso no encontrado:', courseId);
            return;
        }

        editingCourseId = courseId;
        
        // Llenar formulario
        const titleInput = document.getElementById('title');
        const descriptionInput = document.getElementById('description');
        const categoryInput = document.getElementById('category');
        const imageInput = document.getElementById('image');
        const priceInput = document.getElementById('price');
        const originalPriceInput = document.getElementById('originalPrice');
        const durationInput = document.getElementById('duration');
        const levelInput = document.getElementById('level');
        const studentsInput = document.getElementById('students');
        const modalTitle = document.getElementById('modalTitle');
        
        if (titleInput) titleInput.value = course.title || '';
        if (descriptionInput) descriptionInput.value = course.description || '';
        if (categoryInput) categoryInput.value = course.category || '';
        if (imageInput) imageInput.value = course.image || '';
        if (priceInput) priceInput.value = course.price || '';
        if (originalPriceInput) originalPriceInput.value = course.originalPrice || '';
        if (durationInput) durationInput.value = course.duration || '';
        if (levelInput) levelInput.value = course.level || '';
        if (studentsInput) studentsInput.value = course.students || '';
        if (modalTitle) modalTitle.textContent = 'Editar Curso';
        
        openModal();
    }


    // Gestionar curso
    function manageCourse(courseId) {
        console.log('Gestionando curso:', courseId);
        window.location.href = `/admin/courses/${courseId}/manage`;
    }

    // Eliminar curso
    async function deleteCourse(courseId) {
        console.log('Eliminando curso:', courseId);
        if (!confirm('¬øEst√°s seguro de que quieres eliminar este curso?')) {
            return;
        }

        try {
            const response = await fetch(`/api/admin/courses/${courseId}`, {
                method: 'DELETE',
                credentials: 'include'
            });

            if (!response.ok) {
                throw new Error('Error al eliminar curso');
            }

            showMessage('Curso eliminado correctamente', 'success');
            loadCourses();
        } catch (error) {
            console.error('Error:', error);
            showMessage('Error al eliminar curso', 'error');
        }
    }

    // Mostrar mensaje
    function showMessage(message, type) {
        const messageEl = document.getElementById('message');
        if (messageEl) {
            messageEl.textContent = message;
            messageEl.className = `message ${type} show`;
            
            setTimeout(() => {
                messageEl.classList.remove('show');
            }, 3000);
        }
    }

    // Hacer funciones globales para que funcionen desde el HTML
    window.editCourse = editCourse;
    window.manageCourse = manageCourse;
    window.deleteCourse = deleteCourse;

    // Mostrar error
    function showError(message) {
        const error = document.getElementById('error');
        if (error) {
            error.textContent = message;
            error.style.display = 'block';
        }
    }

    // Inicializar cuando se carga la p√°gina
    document.addEventListener('DOMContentLoaded', () => {
        checkAdminSession();
        loadCourses();

        // Event listeners
        const addCourseBtn = document.getElementById('addCourseBtn');
        if (addCourseBtn) {
            addCourseBtn.addEventListener('click', openModal);
        }

        // Event listener espec√≠fico para el bot√≥n de cerrar
        const closeBtn = document.querySelector('.close-btn');
        if (closeBtn) {
            closeBtn.addEventListener('click', function(e) {
                e.preventDefault();
                e.stopPropagation();
                console.log('Close button clicked'); // Debug log
                closeModal();
            });
        }

        const courseForm = document.getElementById('courseForm');
        if (courseForm) {
            courseForm.addEventListener('submit', async (e) => {
                e.preventDefault();
                
                const formData = new FormData(e.target);
                const courseData = Object.fromEntries(formData.entries());

                try {
                    const url = editingCourseId 
                        ? `/api/admin/courses/${editingCourseId}`
                        : '/api/admin/courses';
                    
                    const method = editingCourseId ? 'PUT' : 'POST';

                    const response = await fetch(url, {
                        method: method,
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        credentials: 'include',
                        body: JSON.stringify(courseData)
                    });

                    if (!response.ok) {
                        throw new Error('Error al guardar curso');
                    }

                    const message = editingCourseId ? 'Curso actualizado correctamente' : 'Curso creado correctamente';
                    showMessage(message, 'success');
                    closeModal();
                    loadCourses();
                } catch (error) {
                    console.error('Error:', error);
                    showMessage('Error al guardar curso', 'error');
                }
            });
        }

        // Cerrar modal al hacer clic fuera
        window.onclick = function(event) {
            const modal = document.getElementById('courseModal');
            if (event.target === modal) {
                closeModal();
            }
        }
    });
</script>
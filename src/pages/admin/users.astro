  <style>
    .admin-page {
      min-height: 100vh;
      background: linear-gradient(135deg, #0a0a0a 0%, #1a1a1a 100%);
      color: #ffffff;
    }

    .admin-main {
      max-width: 1400px;
      margin: 0 auto;
      padding: 20px;
    }

    .page-header {
